# VISOR Backend Configuration

# API Keys
SERPAPI_KEY=your_serpapi_key_here

# Storage Configuration
STORAGE_PATH=./data

# Model Configuration
DEVICE=auto  # Options: auto, cuda, mps, cpu
CONFIDENCE_THRESHOLD=0.2
IOU_THRESHOLD=0.5

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database (Optional - currently disabled for stateless mode)
# DATABASE_URL=postgresql://user:password@localhost:5432/visor
# REDIS_URL=redis://localhost:6379/0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Processing Configuration
FRAME_SAMPLE_RATE=2  # Frames per second to process
MAX_VIDEO_SIZE_MB=100
MAX_PROCESSING_TIME_SECONDS=300

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
